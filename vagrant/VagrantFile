# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|
  
  config.vm.define"acs" do |acs|
    acs.vm.box = "ubuntu/trusty64"
    acs.vm.hostname = "acs"
    acs.vm.network "private_network", ip: "192.168.33.10"
    acs.vm.synced_folder "C:\\git\\ansible-playbooks\\", "/home/vagrant/ubuntu"
    acs.vm.provision "shell" do |provision|
        provision.path = "provision-ansible.sh"
    end
  end

  config.vm.define "windows2016" do |windows2016|
    windows2016.vm.box= "mwrock/Windows2016"
    windows2016.vm.hostname = "windows2016"
    windows2016.vm.communicator = "winrm"
    windows2016.winrm.username = "vagrant"
    windows2016.winrm.password = "vagrant"
    windows2016.vm.network "private_network", ip: "192.168.33.20"
  end  
end
